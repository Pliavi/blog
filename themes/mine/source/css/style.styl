// breakpoints
phone = 640px;
tablet = 768px;
desktop = 1024px;
// text-sizes
text-base = 1rem;
text-lg = 1.125rem; // 125
text-xl = 1.25rem; // 125
text-2xl = 1.5rem; // 250
text-3xl = 1.875rem; // 375(250 + 125)
text-4xl = 2.25rem; // 625(375 + 250)
// shadows
shadow-xs = 0 0 0 1px rgba(0, 0, 0, 0.05);
shadow-sm = 0 1px 2px 0 rgba(0, 0, 0, 0.05);
shadow = 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
shadow-md = 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
shadow-lg = 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
shadow-xl = 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
shadow-2xl = 0 25px 50px -12px rgba(0, 0, 0, 0.25);

// sizes
for size in 0 .. 64 {
  define('s' + size, size * 0.25rem);
}

s999 = 9999px;
// durations
d75 = 75ms;
d100 = 100ms;
d150 = 150ms;
d250 = 250ms;
// colors
gray200 = #edf2f7;
gray300 = #e2e8f0;
gray600 = #718096;
gray700 = #4a5568;
gray800 = #2d3748;
gray900 = #1a202c;

// reset
* {
  box-sizing: border-box;
}

a {
  text-decoration: none;
  color: inherit;
}

body {
  font-family: 'Baloo 2', sans-serif;
  color: gray700;
  background-color: gray300;
}

.container {
  width: 100%;
  margin: 0 auto;

  @media (min-width: phone) {
    max-width: phone;
  }

  @media (min-width: tablet) {
    max-width: tablet;
  }

  @media (min-width: desktop) {
    max-width: desktop;
  }
}

.postGrid {
  display: grid;
  gap: s4;

  @media (min-width: tablet) {
    grid-template-columns: repeat(2, 1fr);
  }
}

.post {
  display: grid;
  align-items: center;
  padding: s6;
  transition: all 500ms ease;
  border-radius: s2;
  color: gray900;
  background-color: gray200;
  gap: s6;
  box-shadow: shadow-xs;
  align-items: flex-start;

  &__linkImage > img {
    object-fit: cover;
    border-radius: s2;
    height: 100%;
    width: 100%;
    max-height: 280px;
  }

  &__preview {
    display: grid;
    height: 100%;
    grid-template-rows: auto auto 1fr auto;
    gap: s4;
  }

  &__tags {
    text-align: right;
  }

  &__title {
    font-size: text-4xl;
    font-weight: inherit;
    line-height: s10;
    font-weight: bold;
  }

  &__excerpt {
    font-size: text-lg;
    align-self: stretch;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  &:hover {
    background: white;
    box-shadow: shadow-lg;
    top: -50px;
  }

  .postInfo {
    justify-self: end;
  }

  @media (min-width: tablet) {
    grid-template-columns: 1fr 2fr;

    &:first-child {
      grid-template-columns: 1fr 1fr;
      grid-column: 1 / -1;
    }
  }
}

.tag {
  display: inline-block;
  padding: s1 s2;
  font-weight: bold;
  border-radius: s1;

  &.-gray {
    background: gray600;
    color: white;
  }
}

.postInfo {
  display: flex;
  align-items: center;

  &__wrapper {
    padding-right: s6;
    overflow: hidden;
    line-height: s5;
    text-align: right;
  }

  &__author {
    font-weight: bold;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: gray700;
  }

  &__date {
    color: gray800;
  }

  &__readtime {
    color: gray600;
  }
}

.postInfo {
  &__authorPhoto > img {
    border-radius: s999;
  }
}
